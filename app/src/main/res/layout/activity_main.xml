<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center"
        app:srcCompat="@drawable/substrate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="textEnd">

        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/teal_200"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="60sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:columnCount="4">

            <Button

                android:id="@+id/keyBackButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="Back"
                android:textSize="16sp"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />

            <Button

                android:id="@+id/keyClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="C"
                android:textSize="16sp" />

            <Button

                android:id="@+id/keyPlusMinusBatton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="+/-"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyOneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyTwoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyThreeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="3"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyDivisionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="/"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyFourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyFiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="5"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keySixButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyMultiplayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="*"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keySevenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="7"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyEightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="8"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyNineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="9"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyMinusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="-"
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyZeroButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="0"
                android:textSize="16sp"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />

            <Button
                android:id="@+id/keyPointButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text=","
                android:textSize="16sp" />

            <Button
                android:id="@+id/keyPlusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="+"
                android:textSize="16sp"
                app:layout_gravity="fill"
                app:layout_rowSpan="2" />

            <Button
                android:id="@+id/keyDoubleZeroButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="00" />

            <Button
                android:id="@+id/keyEqualsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="="
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />


        </androidx.gridlayout.widget.GridLayout>


    </LinearLayout>


</FrameLayout>

