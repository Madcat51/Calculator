<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center"
        app:srcCompat="@drawable/substrate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="textEnd">

        <TextView
            android:id="@+id/display_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/teal_200"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="60sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:columnCount="4">

            <Button

                android:id="@+id/key_back_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="Back"
                android:textSize="16sp"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />

            <Button

                android:id="@+id/key_clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="C"
                android:textSize="16sp" />

            <Button

                android:id="@+id/key_plus_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="+/-"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_one_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_two_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_three_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="3"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_division_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="/"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_four_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_five_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="5"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_six_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_multiplay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="*"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_seven_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="7"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_eight_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="8"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_nine_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="9"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="-"
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_zero_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="0"
                android:textSize="16sp"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />

            <Button
                android:id="@+id/key_point_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text=","
                android:textSize="16sp" />

            <Button
                android:id="@+id/key_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="+"
                android:textSize="16sp"
                app:layout_gravity="fill"
                app:layout_rowSpan="2" />

            <Button
                android:id="@+id/key_double_zero_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="00" />

            <Button
                android:id="@+id/key_equals_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="="
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill" />


        </androidx.gridlayout.widget.GridLayout>


    </LinearLayout>


</FrameLayout>

